<div class="container">
    <%= form_for(client) do |form| %>
      <% if client.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>    

          <ul>
          <% client.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>


      <div class="row">
        <div class="form-group col-xs-4">
          <%= form.label :gender %> 
          <%= form.select :gender,[["Herr","m"],["Frau","f"]],{}, class: "form-control"%>
        </div>

        <div class="form-group col-xs-4">
          <%= form.label :dob %>
          <%= form.date_field :dob, class: "form-control"%>
        </div>
      </div><!-- ./row-->

      <div class="row">
        <div class=" form-group col-xs-4">
          <%= form.label :firstname %> 
          <%= form.text_field :firstname, class: "form-control" %>
        </div><!-- ./form-group-->

        <div class="form-group col-xs-4">
          <%= form.label :lastname %>
          <%= form.text_field :lastname, class: "form-control"%>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-xs-4">
          <%= form.label :email , class: "control-label"%>
         <div class="input-group">
           
          <div class="input-group-addon">@</div>
           <%= form.text_field :email, class: "form-control" %>
         </div>
        </div>

        <div class="form-group col-xs-4">
          <%= form.label :phone %>
          <%= form.text_field :phone, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="form-group  col-xs-8">
          <%= form.label :notifications %>
          <%= form.text_area :notifications, class: "form-control" %>
        </div>
      </div>

      <div class="actions">
        <div class="form-group">
          <input type="submit" value="Send" class="btn btn-success" />
        </div>
      </div>
    <% end %>
</div>