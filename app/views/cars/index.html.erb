<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<div class="table-container">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Marke</th>
      <th>Farbe</th>
      <th>PS</th>
      <th>Kraftstoff</th>
    </tr>
  </thead>
</table>

</div>
  <tbody>
    <% @cars.each do |car| %>
        <tr data-path="/cars/<%= car.id %>" class= "rowlink">
        <td><%= car.brand %></td>
        <td><%= car.color %></td>
        <td><%= car.hp %></td>
        <td><%= car.typeof %></td>
        <td><%= link_to 'Show', car, class: "btn btn-warning"%></td>
        <td><%= link_to 'Edit', edit_car_path(car), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path, class: "btn btn-primary" %>
